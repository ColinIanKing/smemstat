_smemstat()
{
	local cur prev
	_init_completion || return

	case "$prev" in
        '-p')	COMPREPLY=( $(compgen -W '$(command ps axo pid | sed 1d) ' $cur ) )
		return 0
		;;
	'-o')	_filedir
		return 0
		;;
	esac

	case "$cur" in
                -*)
                        OPTS="-a -c -d -g -h -k -l -m -o -p -q -s -t -T"
                        COMPREPLY=( $(compgen -W "${OPTS[*]}" -- $cur) )
                        return 0
                        ;;
        esac
	return 0
}

# load the completion
complete -F _smemstat smemstat
